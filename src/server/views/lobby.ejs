<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="navbar">
        <div class="game-logo">
            <span>Game Name / Logo</span>
            <button>Coin</button>
        </div>
        <div class="header">
            <h1>UNO</h1>
        </div>
        <div class="user-actions">
            <button>Profile</button>
            <button>Logout</button>
        </div>
    </div>

    <div class="main-content">
        <h2>Welcome to UNO Game</h2>
        <p>Please select your game or start your new game with your team member.</p>

        <div class="friend-invite">
            <p><a href="#">Invite Your Friend</a></p>
        </div>

        <div class="game-actions">
            <button>Open Games</button>
            <button>New Game</button>
        </div>

        <div class="game-cards">
            <div class="card">
                <img src="game1.jpg" alt="Game 1">
                <p>Game 1</p>
            </div>
            <div class="card">
                <img src="game2.jpg" alt="Game 2">
                <p>Game 2</p>
            </div>
            <div class="card">
                <img src="game3.jpg" alt="Game 3">
                <p>Game 3</p>
            </div>
        </div>

        <div class="chat">
            <div class="chat-box" id="chat-box">
                <!-- Chat messages will be dynamically inserted here -->
            </div>
            <input type="text" id="chat-input" placeholder="Type a message...">
            <button id="send-message">Chat with Friend</button>
        </div>
    </div>

    <!-- Include Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>

    <script>
        // Establish connection to the server
        const socket = io();

        // Send message when user clicks the button
        document.getElementById("send-message").addEventListener("click", () => {
            const message = document.getElementById("chat-input").value;
            if (message) {
                socket.emit("chat message", message); // Emit the message to the server
                document.getElementById("chat-input").value = ""; // Clear the input
            }
        });

        // Listen for incoming messages
        socket.on("chat message", (msg) => {
            const chatBox = document.getElementById("chat-box");
            const messageElement = document.createElement("div");
            messageElement.textContent = msg;
            chatBox.appendChild(messageElement);
            chatBox.scrollTop = chatBox.scrollHeight; // Scroll to the bottom to show the latest message
        });
    </script>
</body>
</html>
