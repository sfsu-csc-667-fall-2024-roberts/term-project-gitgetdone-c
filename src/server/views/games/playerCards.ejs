<div class="p-4 bg-gray-800 rounded-lg shadow-lg">
    <!-- Section Title -->
    <h2 class="text-2xl font-bold text-yellow-400 mb-4 text-center">Your Cards</h2>

    <!-- Cards Container -->
    <div id="player-cards" class="grid grid-cols-4 gap-4">
        <% const currentPlayer = gameState.players.find(player => player.id === currentPlayerId); %>
        <% if (currentPlayer) { %>
            <% currentPlayer.hand.forEach(card => { %>
                <div
                    class="card <%= card.color || 'wild' %> cursor-pointer"
                    data-color="<%= card.color %>"
                    data-value="<%= card.value %>"
                >
                    <% if (card.value.includes("wild")) { %>
                        Wild <% if (card.value === "wild_draw4") { %> Draw 4 <% } %>
                    <% } else { %>
                        <%= card.color.charAt(0).toUpperCase() + card.color.slice(1) %> <%= card.value %>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-gray-300 text-center col-span-4">No cards available</p>
        <% } %>
    </div>
</div>
